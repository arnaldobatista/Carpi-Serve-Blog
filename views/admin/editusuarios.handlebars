{{/each}}

<section class="text-center">
    <div class="p-5 bg-image"></div>
    <div class="card mx-4 mx-md-5 shadow-5-strong" style="
        margin-top: -100px;
        background: hsla(0, 0%, 100%, 0.8);
        backdrop-filter: blur(30px);
        ">
        <div class="card-body py-5 px-md-5">
            <div class="row d-flex justify-content-center">
                <div class="col-lg-8">
                    <form action="/admin/usuarios/edit" method="post">
                        <input type="hidden" name="id" value="{{usuario._id}}">
                        <h2 class="fw-bold mb-5">Editando usuário {{usuario.nome}}</h2>
                        <div class="form-group">
                            <label for="nome">Seu nome</label>
                            <input value="{{usuario.nome}}" type="text" name="nome" class="form-control">
                        </div>
                        <div class="form-group mt-4">
                            <label for="email">Email</label>
                            <input value="{{usuario.email}}" type="email" name="email" class="form-control">
                        </div>
                        <div class="form-group mt-4">
                            <label for="senha">Senha</label>
                            <input value="{{usuario.senha}}" type="password" name="senha" class="form-control">
                        </div>
                        <div class="form-group mt-4">
                            <label for="senha2">Repita sua senha</label>
                            <input value="{{usuario.senha}}" type="password" name="senha2" class="form-control">
                        </div>
                        <div class="form-group mt-4">
                            <label for="eAdmin">é adm?</label>
                            <input value="{{usuario.eAdmin}}" type="text" name="eAdmin" class="form-control">
                        </div>
                        <button type="submit" class="btn btn-primary mt-4">Editar</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>