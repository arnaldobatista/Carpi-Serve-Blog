{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
{{else}}

{{/each}}
<div class="card">
    <div class="card-body">
        <h4>Editar postagem</h4>
        <form action="/admin/postagem/edit" method="post">
        <input type="hidden" value="{{postagem._id}}" name="id">
            <label for="titulo">Título: </label>
            <input type="text" name="titulo" value="{{postagem.titulo}}" class="form-control">
            <label for="slug">Slug: </label>
            <input type="text" name="slug" value="{{postagem.slug}}" class="form-control">
            <label for="descricao" >Descrição: </label>
            <input type="text" name="descricao" value="{{postagem.descricao}}" class="form-control">
            <label for="conteudo" >Conteúdo: </label>
            <textarea name="conteudo" class="form-control">{{postagem.conteudo}}</textarea>
            <label for="categoria">Categorias:</label>
            <select class="form-select" name="categoria">
                {{#each categorias}}
                <option value="{{_id}}">{{nome}}</option>
                {{else}}
                <option value="0">Nenhuma categoria encontrada</option>
                {{/each}}
            </select>
                {{#if categorias}}
                <div class="col-lg-12 mt-4">
                    <button class="btn btn-success" type="submit">Editar postagem</button>
                </div>
                {{else}}
                <div class="col-lg-12 mt-4">
                    <a href="/admin/categorias/add"><button type="button" class="btn btn-success">Criar caregoria</button></a>
                </div>
                {{/if}}
        </form>
    </div>
</div> 