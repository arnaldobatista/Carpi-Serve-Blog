<h2>Lista de categorias:</h2>
<hr>
<a href="/admin/categorias/add"><button type="button" class="btn btn-success">Nova caregoria</button></a>

{{#each categorias}}
    <div class="card mt-4">
        <div class="card-body">
            <h4>{{nome}}</h4>
            <small>Slug: {{slug}}</small> <br>
            <small>Data da criação {{date}}</small>
            <div class="d-flex justify-content-end mt-2">
                    <a href="/admin/categorias/edit/{{_id}}">
                        <button class="btn btn-success">Editar Categoria</button>
                    </a>
                <form action="/admin/categorias/deletar" method="post">
                    <input type="hidden" name="id" value="{{_id}}">
                    <a href="/admin/categorias/edit/{{_id}}">
                        <button type="submit" class="btn btn-danger">Deletar Categoria</button>
                    </a>
                </form>
            </div>
        </div>
    </div>
{{else}}
    <h4 class="text-center">Nenhuma categoria registrada</h4>
{{/each}}

